<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="@dimen/default_radius"
    app:cardElevation="@dimen/material_component_elevation_card"
    app:contentPadding="@dimen/material_component_cards_padding_from_edge_of_screen_to_card"
    android:stateListAnimator="@animator/card_elevation"
    android:background="@drawable/default_item_ripple"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/material_component_floating_action_button_margin">
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/material_component_cards_left_and_right_padding"
            style="@style/title"
            android:transitionName="@string/transition_title"
            tools:text="Title"/>
        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            tools:text="Date"
            android:layout_gravity="end"/>
    </LinearLayout>
</android.support.v7.widget.CardView>